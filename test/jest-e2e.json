{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>../$1",
    "^@core/(.*)$": "<rootDir>../src/@core/$1",
    "^@infra/(.*)$": "<rootDir>../src/infra/$1",
    "^@shared/(.*)$": "<rootDir>../src/shared/$1",
    "^@test/(.*)$": "<rootDir>../test/$1"
  }
}
